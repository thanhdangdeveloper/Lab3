@model  IEnumerable<Lab3.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecture
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
               @* @course.DateTime - @course.Lecture*@
            </li>
        }

    </ul>
</div>